<!DOCTYPE html>
<html>
<head>
    <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>

    <link href="~/Content/Admin/style.css" rel="stylesheet" />

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <!------ Include the above in your HEAD tag ---------->

    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-T8Gy5hrqNKT+hzMclPo118YTQO6cYprQmhrYwIiQ/3axmI1hQomh7Ud2hPOy8SP1" crossorigin="anonymous">
</head>

  @{ WebApiForQuizApp.Models.tbl_User user = null;
      if (Session["user"] != null)
      {
         user  = (WebApiForQuizApp.Models.tbl_User)Session["user"];
      }

  }


  <body class="home">
        <div class="container-fluid display-table">
            <div class="row display-table-row">
                <div class="col-md-2 col-sm-1 hidden-xs display-table-cell v-align box" id="navigation">
                    <div class="logo">
                        <a hef="#">
                            <img src="~/Content/Images/Logo.png" alt="merkery_logo" class="hidden-xs hidden-sm">
                            <img src="~/Content/Images/Logo.png" alt="" class="visible-xs visible-sm circle-logo">
                        </a>
                    </div>
                    <div class="navi">
                        <ul>
                            <li><a href="/Admin/Index"><i class="fa fa-home" aria-hidden="true"></i><span class="hidden-xs hidden-sm">Home</span></a></li>
                            <li><a href="/Admin/Exam"><i class="fa fa-tasks" aria-hidden="true"></i><span class="hidden-xs hidden-sm">Exams</span></a></li>
                            <li><a href="/Admin/Questions"><i class="fa fa-bar-chart" aria-hidden="true"></i><span class="hidden-xs hidden-sm">Questions</span></a></li>
                            <li><a href="/Admin/reports"><i class="fa fa-user" aria-hidden="true"></i><span class="hidden-xs hidden-sm">Reports</span></a></li>
                            <li><a href="/Admin/user"><i class="fa fa-calendar" aria-hidden="true"></i><span class="hidden-xs hidden-sm">Users</span></a></li>
                            
                        </ul>
                    </div>
                </div>
                <div class="col-md-10 col-sm-11 display-table-cell v-align">
                    <!--<button type="button" class="slide-toggle">Slide Toggle</button> -->
                    <div class="row">
                        <header>
                            <div class="col-md-7">
                                <nav class="navbar-default pull-left">
                                    <div class="navbar-header">
                                        <button type="button" class="navbar-toggle collapsed" data-toggle="offcanvas" data-target="#side-menu" aria-expanded="false">
                                            <span class="sr-only">Toggle navigation</span>
                                            <span class="icon-bar"></span>
                                            <span class="icon-bar"></span>
                                            <span class="icon-bar"></span>
                                        </button>
                                    </div>
                                </nav>
                                <div class="search hidden-xs hidden-sm">
                                    <input type="text" placeholder="Search" id="search">
                                </div>
                            </div>
                            <div class="col-md-5">
                                <div class="header-rightside">
                                    <ul class="list-inline header-top pull-right">
                                        <li class="hidden-xs"><a href="#" class="add-project" data-toggle="modal" data-target="#add_project">Add Project</a></li>
                                        <li><a href="#"><i class="fa fa-envelope" aria-hidden="true"></i></a></li>
                                        <li>
                                            <a href="#" class="icon-info">
                                                <i class="fa fa-bell" aria-hidden="true"></i>
                                                <span class="label label-primary">3</span>
                                            </a>
                                        </li>
                                       
                                        <li class="dropdown">
                                            <a href="#" onclick="myFunction()" class="dropbtn">
                                                <img src="~/Content/Images/@user.userImage" alt="user">
                                                <b class="caret"></b>
                                            </a>
                                            <div id="myDropdown" class="dropdown-content">
                                                <div class="navbar-content">
                                                    <span>@user.userName</span>
                                                    @*<p class="text-muted small">

                                                    </p>
                                                    <div class="divider">
                                                    </div>*@

                                                    @using (Html.BeginForm("Logout", "Admin"))
                                                    {
                                                    <input type="submit" class="view btn-sm active" value="LogOut"/>
                                                    }
                                                </div>
                                               
                                            </div>

                                           
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </header>
                    </div>
                    <div class="user-dashboard">
                        
                        <div>
                            @RenderBody()

                        </div>
                    </div>
                </div>
            </div>

        </div>



        <!-- Modal -->
        <div id="add_project" class="modal fade" role="dialog">
            <div class="modal-dialog">

                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header login-header">
                        <button type="button" class="close" data-dismiss="modal">×</button>
                        <h4 class="modal-title">Add Project</h4>
                    </div>
                    <div class="modal-body">
                        <input type="text" placeholder="Project Title" name="name">
                        <input type="text" placeholder="Post of Post" name="mail">
                        <input type="text" placeholder="Author" name="passsword">
                        <textarea placeholder="Desicrption"></textarea>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="cancel" data-dismiss="modal">Close</button>
                        <button type="button" class="add-project" data-dismiss="modal">Save</button>
                    </div>
                </div>

            </div>
        </div>

        <script>

                    function myFunction() {
                        document.getElementById("myDropdown").classList.toggle("show");
}

                    // Close the dropdown if the user clicks outside of it
                    window.onclick = function(event) {
          if (!event.target.matches('.dropbtn')) {
            var dropdowns = document.getElementsByClassName("dropdown-content");
                    var i;
                    for (i = 0; i < dropdowns.length; i++) {
              var openDropdown = dropdowns[i];
                    if (openDropdown.classList.contains('show')) {
                        openDropdown.classList.remove('show');
              }
            }
          }
}

      </script>

    </body>
</html>
